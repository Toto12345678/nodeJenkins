doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Habla con Toto
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css")
    script(defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js")
  body
  
  style(type="text/css").
    .img-bottom{
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

  .columns.is-multiline.is-mobile.is-centered
    .column.is-10-tablet.is-12-mobile
      section.section
        div.container
          h1.title Dile algo a toto
          p.subtitle Toto quiere saber de ti
    .column.is-5-tablet.is-10-mobile
      form(action="/send/to/toto", method="post")
        .field
          label.label Nombre
          .control
            input.input.is-primary(type="text" name="name" required placeholder='Que nombre quieres que toto vea')
        .field
          label.label Mensaje
          .control
            textarea.textarea.has-fixed-size.is-primary(name="content" rows="8" required placeholder='Lo que le quieras decir :)')
        
        button.button.is-fullwidth.is-danger.is-outlined(type="submit") Enviar
    .column.is-5-tablet.is-10-mobile.img-bottom
      img(src="toto.svg", alt="es toto" width=400)